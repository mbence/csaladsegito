{% extends 'JCSGYKAdminBundle::layout.html.twig' %}

{% block content %}
<h1>DB Import </h1>
<br>
<br>
<form action="" method="POST" name="start">
    <dl class="import_controls">
        <dt>Person</dt>
        <dd>
            <button type="submit" name="import" value="person100" onclick="return confirm('{{ 'Biztos benne?'|trans() }}')">Import 100</button>
            &nbsp;&nbsp;
            <button type="submit" name="import" value="person" onclick="return confirm('{{ 'Biztos benne?'|trans() }}')"> &nbsp; Import All &nbsp; </button>
            {% if results.person is defined %}
                Succesfully imported {{ results.person }}
            {% endif %}
        </dd>

        <dt>User</dt>
        <dd>
            <button type="submit" name="import" value="user10" onclick="return confirm('{{ 'Biztos benne?'|trans() }}')">Import 10 </button>
            &nbsp;&nbsp;
            <button type="submit" name="import" value="user" onclick="return confirm('{{ 'Biztos benne?'|trans() }}')"> &nbsp; Import All &nbsp; </button>
            {% if results.user is defined %}
                Succesfully imported {{ results.user }}
            {% endif %}
        </dd>
    </dl>
    <div class="clear"></div>
    <br>
    <button type="submit" name="import" value="all" onclick="return confirm('{{ 'Biztos benne?'|trans() }}')">Import All Tables</button>
</form>
{% endblock %}
