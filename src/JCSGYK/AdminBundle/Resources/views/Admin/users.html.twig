{% extends 'JCSGYKAdminBundle::layout.html.twig' %}

{% block title %}Családsegítő Admin{% endblock %}

{% block content %}
<div class="adminuser">
<h1>{{ 'Felhasználók'|trans }}</h1>

<table id="userlist" class="search-results tablesorter" cellspacing=0 border=0>
    <thead><tr>
        <th>{{ 'név'|trans }}</th>
        <th>{{ 'felhasználói név'|trans }}</th>
        <th>{{ 'email'|trans }}</th>
        <th>{{ 'utolsó belépés'|trans }}</th>
        <th>{{ 'aktív'|trans }}</th>
    </tr></thead>
    <tbody>
    {% for user in users %}
        <tr data-userid="{{ user.id }}" tabindex="{{ loop.index + 99 }}">
            <td>{{ fname(user.firstname, user.lastname) }}</td>
            <td>{{ user.username }}</td>
            <td><a href="mailto:{{ fname(user.firstname, user.lastname) }} &lt;{{ user.email }}&gt;">{{ user.email }}</a></td>
            <td>{{ user.lastLogin|fdate('sdt') }}</td>
            <td>{{ user.enabled|check }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</div>
<div class="adminuser" id="useredit">
    <div class="leftpad rightpad fullheight">
        <form action="{{ path('admin_users') }}" method="post" name="getuserform" id="getuserform">
            <input type="hidden" name="id">
        </form>
        <div class="loading">Betöltés...</div>
        <div class="usercontent"></div>
    </div>
</div>
<div class="clear"></div>
{% endblock %}