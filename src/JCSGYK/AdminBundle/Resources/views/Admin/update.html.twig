{% extends 'JCSGYKAdminBundle:Settings:index.html.twig' %}

{% block settings_content %}

    <div class="acreate">
        <form method="post" action="{{ path('admin_update') }}">
            <h1 class="client">{{ 'Rendszerfrissítés'|trans }}</h1>
            <br>
            <button type="submit" class="button" name="update" value="1" onclick="return confirm('{{ 'Biztos benne?'|trans }}');">{{ 'Frissítés'|trans }}</button>
        </form>
    {% if result %}
        {% for re in result %}
            <br>
            <pre class="update-output">
&gt; <strong>{{ re.ex }}</strong><br>
{{ re.return_val|raw }}<br>
{{ re.output|raw }}
            </pre>
        {% endfor %}
    {% endif %}
    </div>
{% endblock %}