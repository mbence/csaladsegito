<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Családsegítő Admin{% endblock %}</title>
        <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}" />
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>

         {% stylesheets 
            '@JCSGYKAdminBundle/Resources/public/css/reset.css'
            '@JCSGYKAdminBundle/Resources/public/css/style.css'            
            '@JCSGYKAdminBundle/Resources/public/css/assistance.css' 
        %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    </head>
    
    <body>
        <div id="container">
            {% include "JCSGYKAdminBundle:Elements:flash.html.twig" %}
            {% include "JCSGYKAdminBundle:Elements:header.html.twig" %}
            <div id="content">
                {% block content %}{% endblock %}
            </div>
            <div class="clear"></div>
        </div>
        {% include "JCSGYKAdminBundle:Elements:footer.html.twig" %}
            
        {% block javascripts %}
            {% if app.environment == 'dev' %} 
                <script src="{{ asset('/bundles/livephp/js/livephp.js') }}" type="text/javascript"></script>
            {% endif %}
        {% endblock %}
                
        {% javascripts 
            '@JCSGYKAdminBundle/Resources/public/js/jcsgyk.js'
            '@JCSGYKAdminBundle/Resources/public/js/jquery.tools.min.js'
        %}
            <script src="{{ asset_url }}" type="text/javascript"></script>
        {% endjavascripts %}            
            
    </body>
</html>