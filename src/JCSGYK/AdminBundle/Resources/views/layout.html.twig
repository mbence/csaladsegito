<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Családsegítő Admin{% endblock %}</title>
        <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}" />
         {% stylesheets 
            '@JCSGYKAdminBundle/Resources/public/css/reset.css'
            '@JCSGYKAdminBundle/Resources/public/css/style.css'            
            '@JCSGYKAdminBundle/Resources/public/css/login.css' 
        %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    </head>
    <body>
        <div id="header">
            <div id="logo">
                <a href="{{ path('home') }}">{{ 'Családsegítő admin'|trans() }}</a>
            </div>
            <div class="quicksearch">
                <form action="" method="get" name="quick_search">
                    <input type="text" name="q" value="" >
                    <button type="submit" class="searchbutton"><span class="searchicon"></span></button>
                </form>
            </div>
            <div class="headright">
                {{ app.user.username }}
            </div>
        </div>
            
        <div class="clear"></div>
        {% block content %}
        {% endblock %}
            
        {% block javascripts %}
            <script src="{{ asset('/bundles/livephp/js/livephp.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
