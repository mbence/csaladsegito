{# Edit Personal Data #}

    <table class="client-edit" cellspacing="0" border="0">
        <tr>
            {% if form.type is defined %}
            <th class="noborder">{{ form_label(form.type) }}:</th>
            <td class="noborder">{{ form_errors(form.type) }}{{ form_widget(form.type) }}</td>
            {% endif %}
            <th class="noborder">{{ form_label(form.case_admin) }}:</th>
            <td class="noborder" {% if form.type is not defined %}colspan="3"{% endif %}>{{ form_errors(form.case_admin) }}{{ form_widget(form.case_admin) }}</td>
        </tr>
        <tr>
            <td colspan="4" class="noborder">
                <div class="client-sub first-sub">{{ 'személyes adatok'|trans }}</div>
            </td>
        </tr>
        <tr>
            <th class="high">{{ 'Név'|trans }}:</th>
            <td colspan="3">
                <table class="client-edit-inner" cellspacing="0" border="0">
                    <tr>
                        <td class="short">
                            {{ form_label(form.title, null, {'label_attr': {'class': 'above'}}) }}<br>
                            {{ form_errors(form.title) }}
                            {{ form_widget(form.title) }}
                        </td>
                        <td>
                            {{ form_label(form.lastname, null, {'label_attr': {'class': 'above'}}) }}<br>
                            {{ form_errors(form.lastname) }}
                            {{ form_widget(form.lastname) }}
                        </td>
                        <td>
                            {{ form_label(form.firstname, null, {'label_attr': {'class': 'above'}}) }}<br>
                            {{ form_errors(form.firstname) }}
                            {{ form_widget(form.firstname) }}
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <th>{{ client.type|caselabel }}:</th>
            <td>
                {% if (client.type==2 and is_granted(['ROLE_ADMIN'])) or not client.id  %}
                    <table class="client-edit-inner" cellspacing="0" border="0" style="width:auto;">
                    <tr>
                        <td class="short">
                            {{ form_widget(form.case_year) }}
                        </td>
                        <td><div class="bottompad4">/</div></td>
                        <td class="short">
                            {{ form_widget(form.case_number) }}
                        </td>
                    </tr>
                    </table>
                {% else %}
                    <div class="bottompad4">{% if client is defined %}{{ client|casenum }}{% endif %}</div>
                {% endif %}
            </td>
            <th>{{ form_label(form.gender) }}:</th>
            <td>{{ form_errors(form.gender) }}{{ form_widget(form.gender) }}</td>
        </tr>
        <tr>
            <th>{{ 'Szül. név'|trans }}:</th>
            <td colspan="3">
                <table class="client-edit-inner" cellspacing="0" border="0">
                    <tr>
                        <td class="short">
                            {{ form_label(form.birth_title, null, {'label_attr': {'class': 'above'}}) }}<br>
                            {{ form_errors(form.birth_title) }} {{ form_widget(form.birth_title) }}
                        </td>
                        <td>
                            {{ form_label(form.birth_lastname, null, {'label_attr': {'class': 'above'}}) }}<br>
                            {{ form_errors(form.birth_lastname) }} {{ form_widget(form.birth_lastname) }}
                        </td>
                        <td>
                            {{ form_label(form.birth_firstname, null, {'label_attr': {'class': 'above'}}) }}<br>
                            {{ form_errors(form.birth_firstname) }} {{ form_widget(form.birth_firstname) }}
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <th>{{ 'Szül. hely, idő'|trans }}:</th>
            <td colspan="3">
                <table class="client-edit-inner" cellspacing="0" border="0">
                    <tr>
                        <td>{{ form_errors(form.birth_place) }} {{ form_widget(form.birth_place) }} </td>
                        <td>{{ form_errors(form.birth_date) }} {{ form_widget(form.birth_date) }} </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <th>{{ 'Anyja neve'|trans }}:</th>
            <td colspan="3">
                <table class="client-edit-inner" cellspacing="0" border="0">
                    <tr>
                        <td class="short">
                            {{ form_label(form.mother_title, null, {'label_attr': {'class': 'above'}}) }}<br>
                            {{ form_errors(form.mother_title) }} {{ form_widget(form.mother_title) }}
                        </td>
                        <td>
                            {{ form_label(form.mother_lastname, null, {'label_attr': {'class': 'above'}}) }}<br>
                            {{ form_errors(form.mother_lastname) }} {{ form_widget(form.mother_lastname) }}
                        </td>
                        <td>
                            {{ form_label(form.mother_firstname, null, {'label_attr': {'class': 'above'}}) }}<br>
                            {{ form_errors(form.mother_firstname) }} {{ form_widget(form.mother_firstname) }}
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
{# Kapcsolat #}
        <tr>
            <th>{{ form_label(form.mobile) }}:</th>
            <td>{{ form_errors(form.mobile) }} {{ form_widget(form.mobile) }}</td>
            <th>{{ form_label(form.phone) }}:</th>
            <td>{{ form_errors(form.phone) }} {{ form_widget(form.phone) }}</td>
        </tr>
        <tr>
            <th>{{ form_label(form.email) }}:</th>
            <td>{{ form_errors(form.email) }} {{ form_widget(form.email) }}</td>
            <th>{{ form_label(form.fax) }}:</th>
            <td>{{ form_errors(form.fax) }} {{ form_widget(form.fax) }}</td>
        </tr>
        <tr>
            <th>{{ 'Megbízott'|trans }}:</th>
            <td colspan="3">
                <table class="client-edit-inner" cellspacing="0" border="0">
                    <tr>
                        <td>
                            {{ form_label(form.guardian_lastname, null, {'label_attr': {'class': 'above'}}) }}<br>
                            {{ form_errors(form.guardian_lastname) }}
                            {{ form_widget(form.guardian_lastname) }}
                        </td>
                        <td>
                            {{ form_label(form.guardian_firstname, null, {'label_attr': {'class': 'above'}}) }}<br>
                            {{ form_errors(form.guardian_firstname) }}
                            {{ form_widget(form.guardian_firstname) }}
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        </table>
