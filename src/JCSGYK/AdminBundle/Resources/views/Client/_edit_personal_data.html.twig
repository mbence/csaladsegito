{# Edit Personal Data #}

    <table class="client caseowner" cellspacing="0" border="0">
        <tr>
            <th>{{ form_label(form.case_admin) }}:</th>
            <td>{{ form_errors(form.case_admin) }}{{ form_widget(form.case_admin) }}</td>
        </tr>
    </table>
    <div class="client-sub first-sub">{{ 'személyes adatok'|trans }}</div>
    <div>
        <table class="client-edit" cellspacing="0" border="0">
        <tr>
            <th class="high">{{ 'Név'|trans }}:</th>
            <td colspan="3">
                <table class="client-edit-inner" cellspacing="0" border="0">
                    <tr>
                        <td class="short">
                            {{ form_label(form.title, null, {'label_attr': {'class': 'above'}}) }}<br>
                            {{ form_errors(form.title) }}
                            {{ form_widget(form.title) }}
                        </td>
                        <td>
                            {{ form_label(form.lastname, null, {'label_attr': {'class': 'above'}}) }}<br>
                            {{ form_errors(form.lastname) }}
                            {{ form_widget(form.lastname) }}
                        </td>
                        <td>
                            {{ form_label(form.firstname, null, {'label_attr': {'class': 'above'}}) }}<br>
                            {{ form_errors(form.firstname) }}
                            {{ form_widget(form.firstname) }}
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <th>{{ 'Ügyfélszám'|trans }}:</th>
            <td><div class="bottompad4">{% if client is defined %}{{ client.id|cid }}{% endif %}</td></td>
            <th>{{ form_label(form.gender) }}:</th>
            <td>{{ form_errors(form.gender) }}{{ form_widget(form.gender) }}</td>
        </tr>
