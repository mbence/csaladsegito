        {% for param in cgrps() %}
        {% set p = 'param_' ~ param.id %}
        <tr>
            <th>{{ form_label(form[p]) }}:</th>
            <td>
                {{ form_errors(form[p]) }}
                {{ form_widget(form[p]) }}
