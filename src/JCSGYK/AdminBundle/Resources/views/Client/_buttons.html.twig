<div class="button-row">
    {% if buttons is not defined %}
        {% set buttons = ['close'] %}
    {% endif %}

    {% for button in buttons %}

        {# new client #}
        {% if button == 'new_client' %}
            <a href="{{ path('client_new') }}" class="button new_client"><span>{{ 'új ügyfél'|trans }}</span></a>
        {% endif %}
        {# add utility provider #}
        {% if button == 'add_utilityprovider' %}
            <a href="#" class="greybutton add_utilityprovider"><span>{{ 'új szolgáltató'|trans }}</span></a>
        {% endif %}

        {# back to view client #}
        {% if button == 'back' and client.id is defined %}
            {% if client.id %}
                <button type="reset" href="{{ path('client_view', {'id': client.id}) }}" class="greybutton back_to_view" title="{{ 'mégse'|trans }}">
                    <span>{{ 'mégse'|trans }}</span>
                </button>
            {% else %}
                <button type="reset" href="{{ path('clients') }}" class="close greybutton" title="{{ 'mégse'|trans }}">
                    <span>{{ 'mégse'|trans }}</span>
                </button>
            {% endif %}
        {% endif %}

        {# save #}
        {% if button == 'save' and client.id is defined %}
            <button type="submit" href="{{ path('client_edit', {'id': client.id}) }}" class="button save_client" title="{{ 'mentés'|trans }}">
                <span>{{ 'mentés'|trans }}</span>
            </button>
        {% endif %}

        {# edit client #}
        {% if button == 'edit' and client.id is defined and not client.isArchived %}
            <a href="{{ path('client_edit', {'id': client.id}) }}" class="button edit_client" title="{{ 'szerkeszt'|trans }}">
                <span>{{ 'szerkeszt'|trans }}</span>
            </a>
        {% endif %}

        {% if button == 'close' %}
            <div class="close greybutton"><span>x</span></div>
        {% endif %}
    {% endfor %}
</div>
