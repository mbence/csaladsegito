        <td class='short'>
            {{ form_label(form.street_number, null, {'label_attr': {'class': 'above'}})|e }}<br>
            {{ form_errors(form.street_number)|e }} {{ form_widget(form.addresses.vars.prototype.street_number)|e }}
        </td>
        <td class='short'>
            {{ form_label(form.flat_number, null, {'label_attr': {'class': 'above'}})|e }}<br>
            {{ form_errors(form.flat_number)|e }} {{ form_widget(form.addresses.vars.prototype.flat_number)|e }}
        </td>
    </tr>
