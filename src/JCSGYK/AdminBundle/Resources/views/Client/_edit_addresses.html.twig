        <td>
            {{ form_label(form.city, null, {'label_attr': {'class': 'above'}})|e }}<br>
            {{ form_errors(form.city)|e }} {{ form_widget(form.addresses.vars.prototype.city)|e }}
        </td>
    </tr>
</table>
<table class='client-edit-inner' cellspacing='0' border='0'>
    <tr>
        <td>
            {{ form_label(form.street, null, {'label_attr': {'class': 'above'}})|e }}<br>
            {{ form_errors(form.street)|e }} {{ form_widget(form.addresses.vars.prototype.street)|e }}
