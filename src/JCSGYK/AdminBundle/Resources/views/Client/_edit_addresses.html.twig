                {{ form_label(address.city, null, {'label_attr': {'class': 'above'}}) }}<br>
                {{ form_errors(address.city) }} {{ form_widget(address.city) }}
            </td>
        </tr>
    </table>
    <table class="client-edit-inner" cellspacing="0" border="0">
        <tr>
            <td>
                {{ form_label(address.street, null, {'label_attr': {'class': 'above'}}) }}<br>
                {{ form_errors(address.street) }} {{ form_widget(address.street) }}
            </td>
