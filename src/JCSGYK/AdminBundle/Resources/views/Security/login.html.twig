{% extends 'JCSGYKAdminBundle::layout_empty.html.twig' %}

{% block content %}
<div class="login">
    <div id="logo"><img src="{{ asset('/images/' ~ co_logo()) }}"></div>
    <h1>{{ co_short() }} {{ 'Admin belépés'|trans }}</h1>

    <form id="loginform" name="loginform" action="{{ path("fos_user_security_check") }}" method="post">
        {% if error %}
            <div class="error">{{ error|trans({}, 'FOSUserBundle') }}</div>
        {% endif %}

        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

        <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
        <input type="password" class="input" id="password" name="_password" required="required" />

        <div class="toppad">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
        </div>

        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
    </form>
</div>
{% endblock content %}
