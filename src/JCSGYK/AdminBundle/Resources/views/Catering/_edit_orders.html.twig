{# Edit Orders #}
<nav class="calendar-nav clearfix">
    <ul>
        <li class="prev" data-direction="prev" data-next="1">{{ 'Előző hónap'|trans }}</li>
        <li class="next" data-direction="next" data-next="3">{{ 'Következő hónap'|trans }}</li>
    </ul>
</nav>
<div id="ordering-calendar">
    {% for timestamp,month in orders %}
    <div class="month-wrapper" data-date="{{ timestamp|date('Y. F') }}">
        <div class="datepicker clearfix">
                <ul class="table-header">
                    <li class="week-header"></li>
                    <li>{{ 'Hétfő'|trans }}</li>
                    <li>{{ 'Kedd'|trans }}</li>
                    <li>{{ 'Szerda'|trans }}</li>
                    <li>{{ 'Csütörtök'|trans }}</li>
                    <li>{{ 'Péntek'|trans }}</li>
                    <li class="weekend">{{ 'Szombat'|trans }}</li>
                    <li class="weekend">{{ 'Vasárnap'|trans }}</li>
                </ul>
                {% for weeknumber,week in month %}
                <ul class="table-body">
                    <li class="week-header">{{ weeknumber }}. {{ 'hét'|trans }}</li>
                    {% for index,day in week %}
                    <li class="{{ day.class }}"{% if day.day is not null %} data-menu="{{ param(day.menu) }}" data-order="{{ day.order }}" data-modifiable="{{ day.modifiable }}"{% endif %}>
                    {% if day.day is not null %}
                        <span class="day">{% if day.day == 1 %}{{ timestamp|date('F') }} {% endif %}{{ day.day }}.</span>
                        <span class="dayinfo" data-info="INFO"></span>
                        <input type="checkbox" name="orders[{{ timestamp|date('Y-m') ~ '-' ~ '%02d'|format(day.day) }}]" value="1">
                        <span class="menu">{% if day.order == 'cancel' %}{{ 'Lemondva'|trans }}{% else %}{{ param(day.menu) }}{% endif %}</span>
                        <span class="status">{% if day.changed is defined and day.changed == 1 %}{{ 'Utánrendelve'|trans }}{% endif %}</span>
                        <span class="catering{% if day.catering and day.order != 'order' %} sub{% endif %}"></span>
                    {% endif %}
                    </li>
                    {% endfor %}
                </ul>
                {% endfor %}
        </div>
    </div>
    {% endfor %}
</div>