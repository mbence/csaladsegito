{# Edit Catering #}

<div class="client-sub">{{ 'étkeztetés'|trans }}</div>
<table class="client-edit" cellspacing="0" border="0">
    <tr>
        <th>{{ 'Státus'|trans }}:</th>
        <td>
            {{ client.catering.status|status_text }}
        </td>
    </tr>
    <tr class="visit-type">
        <th>{{ form_label(form.agreementFrom) }}:</th>
        <td>
            {{ form_errors(form.agreementFrom) }}{{ form_errors(form.agreementTo) }}
            <div class="inblock">{{ form_widget(form.agreementFrom) }} - </div>
            <div class="inblock">{{ form_widget(form.agreementTo) }}</div>
        </td>
    </tr>
    <tr class="visit-type">
        <th class="noborder">{{ form_label(form.pausedFrom) }}:</th>
        <td class="noborder">
            {{ form_errors(form.pausedFrom) }}{{ form_errors(form.pausedTo) }}
            <div class="inblock">{{ form_widget(form.pausedFrom) }} - </div>
            <div class="inblock">{{ form_widget(form.pausedTo) }}</div>
            <button title="{{ 'Szüneteltetési dátumok törlése'|trans }}" class="clear-paused-dates greybutton smallbutton" type="button"><span style="line-height: normal;">{{ 'x'|trans }}</span></button>
        </td>
    </tr>
</table>

