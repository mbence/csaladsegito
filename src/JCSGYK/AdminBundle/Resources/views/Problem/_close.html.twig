{# Close #}
<div class="client-sub togglable" {% if problem.isActive == 1 %}style="display:none;"{% endif %}>{{ 'lezárás'|trans }}</div>
<div>
    {% if problem.isActive == 0 %}
        <table cellspacing="0" border="0" class="client">
            <tr>
                <th>{{ 'Lezárta'|trans }}:</th>
                <td>{% if problem.closer.firstname is defined %}{{ fname(problem.closer.firstname, problem.closer.lastname) }}{% endif %}</td>
                <td>({{ problem.closedAt|fdate('dt') }})</td>
            </tr>
            <tr>
                <th>{{ 'Lezárás oka'|trans }}:</th>
                <td colspan="2">{{ param(problem.closeCode) }}</td>
            </tr>
            {% if problem.confirmer %}
            <tr>
                <th>{{ 'Jóváhagyta'|trans }}:</th>
                <td>{% if problem.confirmer.firstname is defined %}{{ fname(problem.confirmer.firstname, problem.confirmer.lastname) }}{% endif %}</td>
                <td>({{ problem.confirmedAt|fdate('dt') }})</td>
            </tr>
            {% endif %}
        </table>
    {% endif %}
</div>
